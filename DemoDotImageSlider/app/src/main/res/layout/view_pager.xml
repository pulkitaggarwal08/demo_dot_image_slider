<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/instruction_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_instruction"
        android:layout_width="200dp"
        android:layout_height="240dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:paddingBottom="25dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="25dp"
        android:scaleType="fitXY"
        android:src="@mipmap/instruction_1"
        android:paddingEnd="10dp"
        android:paddingStart="10dp" />

    <com.demo_image_slider.pulkit.textview.LatoBoldTextView
        android:id="@+id/txt_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_instruction"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="@string/welcome_to_my_app"
        android:textColor="@color/white"
        android:textSize="24sp" />


</RelativeLayout>